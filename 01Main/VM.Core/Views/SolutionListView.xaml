<mah:MetroWindow x:Class="HV.Views.SolutionListView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:HV.Views"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:const="clr-namespace:HV.Common.Const"
                 xmlns:lex="http://wpflocalizeextension.codeplex.com"
                 xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:helper="clr-namespace:HV.Common.Helper"
                 xmlns:converter="clr-namespace:HV.Assets.Converter"
                 xmlns:rightControl="clr-namespace:HV.Common.RightControl"
                 lex:LocalizeDictionary.DesignCulture="zh"
                 lex:LocalizeDictionary.OutputMissingKeys="True"
                 lex:ResxLocalizationProvider.DefaultAssembly="HV"
                 lex:ResxLocalizationProvider.DefaultDictionary="Resource"
                 mc:Ignorable="d"
                 Height="630" Width="910"
                 AllowsTransparency="False" 
                 ResizeMode="CanResizeWithGrip"
                 TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                 FontFamily="Microsoft YaHei" 
                 TextElement.FontWeight="Medium"
                 TextElement.FontSize="12"
                 NonActiveGlowBrush="#CDFF0000"
                 ShowTitleBar="True"
                 ShowIconOnTitleBar="True"
                 WindowStartupLocation="CenterScreen"
                 x:Name="window" 
                 Topmost="False"
                 >
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Activated">
            <helper:EventTriggerAction Command="{Binding ActivatedCommand}"/>
        </b:EventTrigger>
        <b:EventTrigger EventName="Loaded">
            <helper:EventTriggerAction Command="{Binding LoadedCommand}"/>
        </b:EventTrigger>
        <b:EventTrigger EventName="Unloaded">
            <helper:EventTriggerAction Command="{Binding UnloadedCommand}"/>
        </b:EventTrigger>

    </b:Interaction.Triggers>
    <Window.Resources>
        <ResourceDictionary>
            <converter:Bool2VisibilityConverter x:Key="Bool2VisibilityConverter"/>
            <rightControl:RightControl x:Key="RightControl"></rightControl:RightControl>
        </ResourceDictionary>
    </Window.Resources>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <TextBlock Text="&#xe628;" VerticalAlignment="Center" Margin="5 0" FontWeight="Light" FontFamily="{DynamicResource iconfont}" FontSize="16"/>
            <TextBlock Text="{lex:Loc Key=SolutionList}" VerticalAlignment="Center" Margin="5 0" FontWeight="Light"/>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <DataGrid AutoGenerateColumns="False" x:Name="dg"
                                                  EnableColumnVirtualization="True"
                                                  EnableRowVirtualization="True"
                                                  VirtualizingPanel.IsVirtualizing="True"
                                                  ItemsSource="{Binding ProjectModels}" SelectedItem="{Binding SelectedProject}"
                                                  FontSize="12" 
                                                  RowHeaderWidth="20"
                                                  SelectionUnit="FullRow"
                                                  HeadersVisibility="Column"
                                                  GridLinesVisibility="All"
                                                  IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="序号" IsReadOnly="True" Width="auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ID ,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="名称" IsReadOnly="True" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="注释" IsReadOnly="True" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Remarks}" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="路径" IsReadOnly="True" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path}" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Column="1">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource VmButton}">
                        <Setter Property="Width" Value="90"/>
                    </Style>
                </StackPanel.Resources>
                <Button Content="打开" Margin="0 10" Cursor="Hand" Command="{Binding SolutionCommand}" CommandParameter="Open" />
                <Button Content="设置默认启动" Margin="0 10" Command="{Binding SolutionCommand}" CommandParameter="DefaultOpen"/>
                <Button Content="添加当前方案" Margin="0 10" Command="{Binding SolutionCommand}" CommandParameter="AddCurrentThis"/>
                <Button Content="添加" Margin="0 10" Command="{Binding SolutionCommand}" CommandParameter="AddCurrent"/>
                <Button Content="删除" Margin="0 10" Command="{Binding SolutionCommand}" CommandParameter="Del"/>
                <Button Content="上移" Margin="0 10" Command="{Binding SolutionCommand}" CommandParameter="MoveUp"/>
                <Button Content="下移" Margin="0 10" Command="{Binding SolutionCommand}" Cursor="Hand" CommandParameter="MoveDown"/>

            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="自动加载路径:" Foreground="{StaticResource MahApps.Brushes.Badged.Foreground}" Margin="10 0 5 0"/>
            <TextBlock VerticalAlignment="Center" Text="{Binding AutoLoadPath}" Foreground="{StaticResource MahApps.Brushes.Badged.Foreground}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="{lex:Loc Key=Cancel}" HorizontalAlignment="Right" Click="btnCancel_Click"/>
            <Button x:Name="btnConfirm" Content="{lex:Loc Key=Confirm}" HorizontalAlignment="Right" Margin="20 0 20 0" 
                    Background="#FFFF2000" BorderBrush="#FFFF2000" 
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
