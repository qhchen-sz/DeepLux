<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DrawingBrush
        x:Key="GridBrushResource"
        TileMode="Tile"
        Viewport="0,0,10,10"
        ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <DrawingGroup.Children>
                    <GeometryDrawing Brush="#FF3D3636">
                        <!--  这里是格子填充颜色  -->
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="Gray" Geometry="M0,0 L1,0 1,0.1, 0,0.1Z" />
                    <!--  这里是横线  -->
                    <GeometryDrawing Brush="Gray" Geometry="M0,0 L0,1 0.1,1, 0.1,0Z" />
                    <!--  这里是竖线  -->
                </DrawingGroup.Children>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
</ResourceDictionary>