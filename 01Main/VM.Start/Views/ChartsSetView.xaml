<mah:MetroWindow x:Class="HV.Views.ChartsSetView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                 xmlns:local="clr-namespace:HV.Views"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:const="clr-namespace:HV.Common.Const"
                 xmlns:lex="http://wpflocalizeextension.codeplex.com"
                 xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:helper="clr-namespace:HV.Common.Helper"
                 xmlns:cvt="clr-namespace:HV.Assets.Converter"
                 xmlns:enum="clr-namespace:HV.Common.Enums"
                 xmlns:rightControl="clr-namespace:HV.Common.RightControl"
                 xmlns:services ="clr-namespace:HV.Services"
                 lex:LocalizeDictionary.DesignCulture="zh"
                 lex:LocalizeDictionary.OutputMissingKeys="True"
                 lex:ResxLocalizationProvider.DefaultAssembly="HV"
                 lex:ResxLocalizationProvider.DefaultDictionary="Resource"
                 mc:Ignorable="d"
                 Height="680" Width="980"
                 AllowsTransparency="False" 
                 ResizeMode="CanResizeWithGrip"
                 WindowStartupLocation="CenterScreen"
                 TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                 FontFamily="Microsoft YaHei" 
                 TextElement.FontWeight="Medium"
                 TextElement.FontSize="12"
                 NonActiveGlowBrush="#CDFF0000"
                 ShowTitleBar="True"
                 ShowIconOnTitleBar="True"
                 x:Name="window" 
                 Topmost="False"
                 >
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Activated">
            <helper:EventTriggerAction Command="{Binding ActivatedCommand}"/>
        </b:EventTrigger>
        <b:EventTrigger EventName="Loaded">
            <helper:EventTriggerAction Command="{Binding LoadedCommand}"/>
        </b:EventTrigger>
        <b:EventTrigger EventName="Unloaded">
            <helper:EventTriggerAction Command="{Binding UnloadedCommand}"/>
        </b:EventTrigger>

    </b:Interaction.Triggers>
    <Window.Resources>
        <ResourceDictionary>
            <cvt:Bool2VisibilityConverter x:Key="Bool2VisibilityConverter"/>
            <cvt:EnumConverter x:Key="EnumConverter"/>
            <cvt:EnumToVisibilityConverterForChart x:Key="EnumToVisibilityConverterForChart"/>
            <rightControl:RightControl x:Key="RightControl"></rightControl:RightControl>
            <services:Solution x:Key="solution"/>
        </ResourceDictionary>
    </Window.Resources>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <TextBlock Text="&#xe60e;" VerticalAlignment="Center" Margin="5 0" FontWeight="Light" FontFamily="{DynamicResource iconfont}" FontSize="16"/>
            <TextBlock Text="图表设置" VerticalAlignment="Center" Margin="5 0" FontWeight="Light"/>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <Grid Margin="0 5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <Border Background="Gray" Margin="5" Grid.Column="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.One}}">
                    <TextBlock Text="1" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType1 ,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" 
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Two}}">
                    <TextBlock Text="2" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType2,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" 
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Three}}">
                    <TextBlock Text="3" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType3,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" 
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Four}}">
                    <TextBlock Text="4" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType4,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Five}}">
                    <TextBlock Text="5" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType5,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Six}}">
                    <TextBlock Text="6" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType6,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Seven}}">
                    <TextBlock Text="7" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType7,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Eight}}">
                    <TextBlock Text="8" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType8,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                            DataContext="{Binding Source={StaticResource solution}}"
                            Visibility="{Binding Ins.ChartViewMode,Converter={StaticResource EnumToVisibilityConverterForChart},ConverterParameter={x:Static enum:eViewMode.Night}}">
                    <TextBlock Text="9" FontSize="26" Foreground="White"   Margin="0,0,30,0"/>
                    <ComboBox Width="100" ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType9,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>

            
            
        </Border>
        <Grid>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Badged.Foreground}"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <UniformGrid>
                    <Border Background="Gray" Margin="5">

                        <TextBlock Text="1"/>
                    </Border>
                </UniformGrid>
                <RadioButton Grid.Row="1" Content="画布1" HorizontalAlignment="Center" GroupName="ChartsSetView"
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.One}}"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <UniformGrid Columns="2">
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="2"/>
                    </Border>
                </UniformGrid>
                <RadioButton Grid.Row="1" Content="画布2" HorizontalAlignment="Center" GroupName="ChartsSetView" 
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Two}}"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Gray" Margin="5" Grid.RowSpan="2">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Column="1">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="3"/>
                    </Border>
                </Grid>
                <RadioButton Grid.Row="1" Content="画布3" HorizontalAlignment="Center" GroupName="ChartsSetView" 
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Three}}"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <UniformGrid Columns="2" Rows="2">
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="3"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="4"/>
                    </Border>
                </UniformGrid>
                <RadioButton Grid.Row="1" Content="画布4" HorizontalAlignment="Center" GroupName="ChartsSetView" 
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Four}}"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Gray" Margin="5" Grid.ColumnSpan="2">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Column="2">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="3"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="4"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="2">
                        <TextBlock Text="5"/>
                    </Border>

                </Grid>
                <RadioButton Grid.Row="1" Content="画布5" HorizontalAlignment="Center" GroupName="ChartsSetView" 
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Five}}"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <UniformGrid Columns="3" Rows="2">
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="3"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="4"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="5"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="6"/>
                    </Border>
                </UniformGrid>
                <RadioButton Grid.Row="1" Content="画布6" HorizontalAlignment="Center" GroupName="ChartsSetView" 
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Six}}"/>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Gray" Margin="5" Grid.ColumnSpan="2">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Column="2">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Column="3">
                        <TextBlock Text="3"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="4"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="5"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="2">
                        <TextBlock Text="6"/>
                    </Border>
                    <Border Background="Gray" Margin="5" Grid.Row="1" Grid.Column="3">
                        <TextBlock Text="7"/>
                    </Border>
                </Grid>
                <RadioButton Grid.Row="1" Content="画布7" HorizontalAlignment="Center" GroupName="ChartsSetView"
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Seven}}"/>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <UniformGrid Columns="4" Rows="2">
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="3"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="4"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="5"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="6"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="7"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="8"/>
                    </Border>
                </UniformGrid>
                <RadioButton Grid.Row="1" Content="画布8" HorizontalAlignment="Center" GroupName="ChartsSetView"
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Eight}}"/>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <UniformGrid Columns="3" Rows="3">
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="3"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="4"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="5"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="6"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="7"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="8"/>
                    </Border>
                    <Border Background="Gray" Margin="5">
                        <TextBlock Text="9"/>
                    </Border>
                </UniformGrid>
                <RadioButton Grid.Row="1" Content="画布9" HorizontalAlignment="Center" GroupName="ChartsSetView"
                             DataContext="{Binding Source={StaticResource solution}}"
                             IsChecked="{Binding Ins.ChartViewMode,Converter={StaticResource EnumConverter},ConverterParameter={x:Static enum:eViewMode.Night}}"/>
            </Grid>

        </Grid>
        <DockPanel Grid.Row="1" LastChildFill="True">
            <StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Content="{lex:Loc Key=Cancel}" HorizontalAlignment="Right" Click="btnCancel_Click"/>
                <Button x:Name="btnConfirm" Content="{lex:Loc Key=Confirm}" HorizontalAlignment="Right" Margin="20 0 20 0" 
                        Background="#FFFF2000" BorderBrush="#FFFF2000" 
                        Command="{Binding ConfirmCommand}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</mah:MetroWindow>
