<mah:MetroWindow
    x:Class="HV.Views.LaserSetView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HV.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LaserSetView"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <TextBlock
                Margin="5,0"
                VerticalAlignment="Center"
                FontFamily="{DynamicResource iconfont}"
                FontSize="16"
                FontWeight="Light"
                Text="&#xe66e;" />
            <TextBlock
                Margin="5,0"
                VerticalAlignment="Center"
                FontWeight="Light"
                Text="激光设置" />
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <Grid Margin="0,1">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" MinHeight="200" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <Border x:Name="bd" Grid.Row="0">
                    <GroupBox
                        Width="{Binding ElementName=bd, Path=ActualWidth}"
                        Height="{Binding ElementName=bd, Path=ActualHeight}"
                        Margin="2,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Header="激光列表">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="AUTO" />
                                <RowDefinition Height="AUTO" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Margin="5,2"
                                Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="激光类型:" />
                                <ComboBox
                                    x:Name="cmbLaserType"
                                    Width="130"
                                    Height="25"
                                    Margin="5,0"
                                    BorderThickness="0,0,0,1"
                                    ItemsSource="{Binding LaserTypes}"
                                    SelectedItem="{Binding SelectedLaserType}"
                                    SelectionChanged="cmbLaserType_SelectionChanged" />
                                <Button
                                    Width="30"
                                    Height="26"
                                    Background="{StaticResource MahApps.Brushes.Accent4}"
                                    BorderBrush="{StaticResource MahApps.Brushes.Accent4}"
                                    Command="{Binding DataOperateCommand}"
                                    CommandParameter="Add"
                                    Content="&#xe657;"
                                    FontFamily="{DynamicResource iconfont}"
                                    FontSize="18"
                                    ToolTip="添加" />
                                <Button
                                    Width="30"
                                    Height="26"
                                    Margin="5,0"
                                    Background="{StaticResource MahApps.Brushes.Accent4}"
                                    BorderBrush="{StaticResource MahApps.Brushes.Accent4}"
                                    Command="{Binding DataOperateCommand}"
                                    CommandParameter="Delete"
                                    Content="&#xe692;"
                                    FontFamily="{DynamicResource iconfont}"
                                    FontSize="18"
                                    ToolTip="删除" />
                            </StackPanel>

                            <DataGrid
                                x:Name="dg"
                                Grid.Row="2"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                EnableColumnVirtualization="True"
                                EnableRowVirtualization="True"
                                FontSize="12"
                                GridLinesVisibility="All"
                                HeadersVisibility="Column"
                                IsReadOnly="True"
                                ItemsSource="{Binding LaserModels}"
                                RowHeaderWidth="20"
                                SelectedCellsChanged="dg_SelectedCellsChanged"
                                SelectedItem="{Binding SelectedLaserModel}"
                                SelectionUnit="FullRow"
                                VirtualizingPanel.IsVirtualizing="True">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn
                                        Width="auto"
                                        Header="名称"
                                        IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding LaserName, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        Width="*"
                                        Header="激光索引"
                                        IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    HorizontalAlignment="Left"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Text="{Binding LaserIndex, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        Width="*"
                                        Header="图档路径"
                                        IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    HorizontalAlignment="Left"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Text="{Binding LaserFilePath, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn
                                        Width="auto"
                                        Header="连接状态"
                                        IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Width="18"
                                                    Height="18"
                                                    Background="{Binding IsInit, Converter={StaticResource Bool2ColorConverter}}"
                                                    CornerRadius="9" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Border>
                <Border Grid.Row="1">
                    <GroupBox
                        Width="{Binding ElementName=bd, Path=ActualWidth}"
                        Height="auto"
                        Margin="2,0,0,0"
                        HorizontalAlignment="Left"
                        Header="激光参数">
                        <StackPanel
                            Margin="5,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <StackPanel Margin="0,10" Orientation="Horizontal">
                                <TextBlock
                                    Width="60"
                                    VerticalAlignment="Center"
                                    Text="当前激光:" />
                                <TextBox
                                    Width="200"
                                    Margin="5,0"
                                    BorderThickness="0,0,0,1"
                                    IsReadOnly="False"
                                    Text="{Binding SelectedLaserModel.LaserName, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,10" Orientation="Horizontal">
                                <TextBlock
                                    Width="60"
                                    VerticalAlignment="Center"
                                    Text="激光索引:" />
                                <TextBox
                                    Width="200"
                                    Margin="5,0"
                                    BorderThickness="0,0,0,1"
                                    IsReadOnly="False"
                                    Text="{Binding SelectedLaserModel.LaserIndex, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,5">
                                <TextBlock Text="图档路径：" />
                                <TextBox
                                    Width="350"
                                    mah:TextBoxHelper.ButtonCommand="{Binding LaserFilePathCommand, Mode=OneWay}"
                                    Style="{DynamicResource MahApps.Styles.TextBox.Search}"
                                    Text="{Binding SelectedLaserModel.LaserFilePath, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>


                        </StackPanel>
                    </GroupBox>
                </Border>
                <Border Grid.Row="2">
                    <GroupBox
                        Width="{Binding ElementName=bd, Path=ActualWidth}"
                        Height="auto"
                        Margin="2,0,0,0"
                        HorizontalAlignment="Left"
                        Header="激光操作">
                        <StackPanel Margin="5,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Margin="5,0"
                                    Command="{Binding ButtonOperateCommand}"
                                    CommandParameter="Init"
                                    Content="初始化" />
                                <Button
                                    Margin="5,0"
                                    Command="{Binding ButtonOperateCommand}"
                                    CommandParameter="StartLaser"
                                    Content="开始激光" />
                                <Button
                                    Margin="5,0"
                                    Command="{Binding ButtonOperateCommand}"
                                    CommandParameter="EditImg"
                                    Content="编辑图档" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Border>

            </Grid>
            <GridSplitter Grid.Column="1" />
            <Grid Grid.Column="2">
                <ContentControl Content="{Binding LaserControl}" />

            </Grid>
        </Grid>

        <Border
            Grid.Row="1"
            BorderBrush="White"
            BorderThickness="0,0.5,0,0">
            <DockPanel LastChildFill="True">
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="btnCancel"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Click="btnCancel_Click"
                        Content="取消" />
                    <Button
                        x:Name="btnConfirm"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Background="#FFFF2000"
                        BorderBrush="#FFFF2000"
                        Command="{Binding ConfirmCommand}"
                        Content="确认" />
                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</mah:MetroWindow>
