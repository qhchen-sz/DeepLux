<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/Icon.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/ButtonStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/TabControlStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/MenuStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/TreeViewStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/TextBoxStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/Chip.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/Converter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Assets/Styles/BackrgroundStyle.xaml" />
        <ResourceDictionary>
            <FontFamily x:Key="iconfont">pack://application:,,,/HV;component/Assets/Fonts/#iconfont</FontFamily>
            <FontFamily x:Key="digital_display">pack://application:,,,/Motion.Start;component/Assets/Fonts/#digital display</FontFamily>
            <Style TargetType="Run">
                <Setter Property="Foreground" Value="White" />
            </Style>
            <Style TargetType="mah:MetroWindow">
                <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}" />
                <Setter Property="GlowBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
            </Style>
        </ResourceDictionary>

    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>