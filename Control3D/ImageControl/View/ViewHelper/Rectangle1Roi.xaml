<UserControl x:Class="ImageControl.Rectangle1Roi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Canvas >
        <Rectangle Width="{Binding Width}" Height="{Binding Height}" Stroke="Red" StrokeThickness="2"
               Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"/>
        <Ellipse Fill="Yellow" Width="10" Height="10"
                 
         Canvas.Left="{Binding CenterX}"
         Canvas.Top="{Binding CenterY}"
         MouseDown="Ellipse_MouseDown"
         MouseMove="Ellipse_MouseMove"
         MouseUp="Ellipse_MouseUp"
                 />
        <!-- 不带箭头的线 -->
        <Line Stroke="Green" StrokeThickness="2"
          X1="{Binding PathToX1}" Y1="{Binding PathToY1}"
          X2="{Binding PathToX2}" Y2="{Binding PathToY2}" />
        <!-- 带箭头的线 -->
        <Line Stroke="Blue" StrokeThickness="2"
          X1="{Binding PathToArrowX1}" Y1="{Binding PathToArrowY1}"
          X2="{Binding PathToArrowX2}" Y2="{Binding PathToArrowY2}" />
        <Polygon Fill="Blue" Points="{Binding ArrowHeadPoints}"
             Canvas.Left="{Binding ArrowHeadX}"
             Canvas.Top="{Binding ArrowHeadY}" />
    </Canvas>

</UserControl>
