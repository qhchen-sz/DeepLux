<UserControl x:Class="ImageControl.ImageControl2D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageControl"
             xmlns:imagewindows ="clr-namespace:OpenCvSharp;assembly=OpenCvSharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

        <Canvas Name="ImageCanvas"  Grid.Row="1">
            <Image Name="ImageViewer" Canvas.Left="0" Canvas.Top="0"/>
            <ItemsControl ItemsSource="{Binding Rois}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:Rectangle1Roi/>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>

   


</UserControl>
