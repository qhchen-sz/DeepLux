<UserControl x:Class="ImageControl.Meau"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rubyer ="http://rubyer.io/winfx/xaml/toolkit"
             xmlns:local="clr-namespace:ImageControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Background="Black">
        <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Width="38" ToolTip="图像自适应" Margin="10,0,0,0" Click="menu_Fit_Click" >
            <rubyer:Icon Type="FullscreenLine" Height="28" Width="28" />
        </Button>
        <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"  Width="38" ToolTip="加载图片" Margin="10,0,0,0" Click="menu_OpenFilm_Click">
            <rubyer:Icon Type="Folder3Line" Height="28" Width="28"/>
        </Button>
        <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"  Width="38" ToolTip="保存图片" Margin="10,0,0,0" >
            <rubyer:Icon Type="Save3Line" Height="28" Width="28"/>
        </Button>
        <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"  Width="38" ToolTip="3D显示" Margin="10,0,0,0" Click="Disp_3D" x:Name="Disp3D" >
            <rubyer:Icon Type="Box3Fill"  Height="28" Width="28"/>
        </Button>
        <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"  Width="38" ToolTip="2D显示" Margin="10,0,0,0" Click="Disp_2D" x:Name="Disp2D" >
            <rubyer:Icon Type="RestoreLine"  Height="28" Width="28"/>
        </Button>
        <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"  Width="38" ToolTip="添加亮度图" Margin="10,0,0,0" Click="menu_AddLightimg_Click">
            <rubyer:Icon Type="AddFill" Height="28" Width="28"/>
        </Button>
    </StackPanel>
</UserControl>
