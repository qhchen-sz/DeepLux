<vb:ModuleViewBase x:Class="Plugin.AIPost.Views.AIPostView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:vb="clr-namespace:HV.Core;assembly=HV"      
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:Plugin.AIPost.Views"
                   xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                   xmlns:helper="clr-namespace:HV.Common.Helper;assembly=HV"
                   xmlns:enum="clr-namespace:HV.Common.Enums;assembly=HV"
                   xmlns:cvt="clr-namespace:HV.Assets.Converter;assembly=HV"
                   xmlns:vm="clr-namespace:Plugin.AIPost.ViewModels"
                   xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
                   xmlns:hw="clr-namespace:VM.Halcon;assembly=VM.Halcon" 
                   Icon="/Plugin.AIPost;component/Assets/Images/Tool/AIPost.png"
                   Height="680" Width="980"
                   Loaded="ModuleViewBase_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <cvt:EnumConverter x:Key="EnumConverter" />
                    <cvt:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
                    <cvt:StatusConverter x:Key="StatusConverter"/>
                    <local:AiClassToVisibilityConverter x:Key="AiClassToVisibilityConverter"/>
                </ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/HV;component/Assets/Collection.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="370"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TabControl Style="{StaticResource VerTabControl}" >
                <TabControl.Resources>
                    <Style TargetType="TabItem" BasedOn="{StaticResource VerTabItem}"/>
                </TabControl.Resources>
                <TabItem Header="基本参数">
                    <Grid x:Name="gd">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="46*"/>
                            <ColumnDefinition Width="111*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="250"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.ColumnSpan="2">
                            <GroupBox Header="图像链接">
                                <StackPanel Orientation="Horizontal" Margin="5 0">
                                    <TextBlock Text="输入图像" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="200" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding InputImageLinkText}"
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.InputImageLink}"/>
                                </StackPanel>
                            </GroupBox>
                        </Border>
                        <Border Grid.Row="1" Grid.ColumnSpan="2">
                            <GroupBox Header="区域链接">
                                <StackPanel Orientation="Horizontal" Margin="5 0">
                                    <TextBlock Text="输入区域" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="200" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding InputRegionLinkText}"
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.InputRegionLink}"/>
                                </StackPanel>
                            </GroupBox>
                        </Border>

                    </Grid>

                </TabItem>
                <TabItem Header="参数设置">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Width="{Binding ElementName=gd2,Path=ActualWidth}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="缺陷种类:" VerticalAlignment="Center"  Width="120"/>
                                    <ComboBox Width="150" Margin="5 0" BorderThickness="0 0 0 1" SelectedItem="{Binding AiClass, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ItemsSource="{Binding AiClassSource, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel>
                                    <GroupBox Header="面积">
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock Text="上限:" VerticalAlignment="Center" Width="30" />
                                            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="90" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding ParaModel.AreaUpLimtstr,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.Value="{Binding ParaModel.AreaUpLimt,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"        
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     IsEnabled="{Binding ParaModel.UseArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.AreaUpLimt}"/>
                                            <!--<mah:NumericUpDown  Width="80" Margin="5 0" BorderThickness="0 0 0 1" 
                                    Value="{Binding ParaModel.AreaUpLimt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=F2}" 
                                    IsEnabled="{Binding ParaModel.UseArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Minimum="0" Maximum="999999999" Interval="1"/>-->
                                            <TextBlock Text="下限:" VerticalAlignment="Center" Width="30" />
                                            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="90" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding ParaModel.AreaDnLimtstr,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                     mah:TextBoxHelper.Value="{Binding ParaModel.AreaDnLimt,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     IsEnabled="{Binding ParaModel.UseArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.AreaDnLimt}"/>
                                            <!--<mah:NumericUpDown  Width="80" Margin="5 0" BorderThickness="0 0 0 1" 
                                    Value="{Binding ParaModel.AreaDnLimt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=F2}" 
                                    IsEnabled="{Binding ParaModel.UseArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Minimum="0" Maximum="999999999" Interval="1"/>-->
                                            <CheckBox Content="{Binding ParaModel.UseArea, Converter={StaticResource AiClassToVisibilityConverter}}" Margin="20,0,0,0" IsChecked="{Binding ParaModel.UseArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                        </StackPanel>
                                    </GroupBox>
                                    <GroupBox Header="宽度">
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock Text="上限:" VerticalAlignment="Center" Width="30" />
                                            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="90" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding ParaModel.WidthUpLimtstr,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.Value="{Binding ParaModel.WidthUpLimt,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"        
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     IsEnabled="{Binding ParaModel.UseWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.WidthUpLimt}"/>
                                            <!--<mah:NumericUpDown  Width="80" Margin="5 0" BorderThickness="0 0 0 1" 
                                    Value="{Binding ParaModel.WidthUpLimt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=F2}" 
                                    IsEnabled="{Binding ParaModel.UseWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Minimum="0" Maximum="999999999" Interval="1"/>-->
                                            <TextBlock Text="下限:" VerticalAlignment="Center" Width="30" />
                                            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="90" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding ParaModel.WidthDnLimtstr,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.Value="{Binding ParaModel.WidthDnLimt,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"        
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     IsEnabled="{Binding ParaModel.UseWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.WidthDnLimt}"/>
                                            <!--<mah:NumericUpDown  Width="80" Margin="5 0" BorderThickness="0 0 0 1" 
                                    Value="{Binding ParaModel.WidthDnLimt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=F2}" 
                                    IsEnabled="{Binding ParaModel.UseWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Minimum="0" Maximum="999999999" Interval="1"/>-->
                                            <CheckBox Content="{Binding ParaModel.UseWidth, Converter={StaticResource AiClassToVisibilityConverter}}" Margin="20,0,0,0" IsChecked="{Binding ParaModel.UseWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                        </StackPanel>
                                    </GroupBox>
                                    <GroupBox Header="高度">
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock Text="上限:" VerticalAlignment="Center" Width="30" />
                                            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="90" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding ParaModel.HeightUpLimtstr,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.Value="{Binding ParaModel.HeightUpLimt,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"        
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     IsEnabled="{Binding ParaModel.UseHeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.HeightUpLimt}"/>
                                            <!--<mah:NumericUpDown  Width="80" Margin="5 0" BorderThickness="0 0 0 1" 
                                    Value="{Binding ParaModel.HeightUpLimt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=F2}" 
                                    IsEnabled="{Binding ParaModel.UseHeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Minimum="0" Maximum="999999999" Interval="1"/>-->
                                            <TextBlock Text="下限:" VerticalAlignment="Center" Width="30" />
                                            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="90" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding ParaModel.HeightDnLimtstr,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.Value="{Binding ParaModel.HeightDnLimt,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"        
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     IsEnabled="{Binding ParaModel.UseHeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.HeightDnLimt}"/>
                                            <!--<mah:NumericUpDown  Width="80" Margin="5 0" BorderThickness="0 0 0 1" 
                                    Value="{Binding ParaModel.HeightDnLimt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=F2}" 
                                    IsEnabled="{Binding ParaModel.UseHeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Minimum="0" Maximum="999999999" Interval="1"/>-->
                                            <CheckBox Content="{Binding ParaModel.UseHeight, Converter={StaticResource AiClassToVisibilityConverter}}" Margin="20,0,0,0" IsChecked="{Binding ParaModel.UseHeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                        </StackPanel>
                                    </GroupBox>
                                </StackPanel>

                            </StackPanel>

                        </Border>
                        <Border Width="{Binding ElementName=gd2,Path=ActualWidth}" Grid.Row="1">
                            <DataGrid
                    
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    EnableColumnVirtualization="True"
                    EnableRowVirtualization="True"
                    FontSize="12"
                    GridLinesVisibility="All"
                    HeadersVisibility="Column"
                    ItemsSource="{Binding DefectVar}"
                    SelectedItem="{Binding SelectDefectVar}"
                    RowHeaderWidth="20"
                    SelectionUnit="FullRow"
                    VirtualizingPanel.IsVirtualizing="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding DefectType}"
                            CanUserSort="True"
                            Header="缺陷类型"
                            IsReadOnly="True" />
                                    <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding DefectArea}"
                            CanUserSort="False"
                            Header="缺陷面积"
                            IsReadOnly="True" />
                                    <DataGridTextColumn
                            Width="100"
                            Binding="{Binding DefectWidth}"
                            CanUserSort="False"
                            Header="缺陷宽度"
                            IsReadOnly="True" />
                                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DefectHeight}"
                            CanUserSort="False"
                            Header="缺陷长度"
                            IsReadOnly="True" />

                                </DataGrid.Columns>
                            </DataGrid>

                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
            <GridSplitter Grid.Column="1"/>
            <WinFormHost:WindowsFormsHost Margin="5" Grid.Column="2" x:Name="winFormHost">
            </WinFormHost:WindowsFormsHost>

        </Grid>
        <Border Grid.Row="1" BorderBrush="White" BorderThickness="0 0.5 0 0">
            <DockPanel LastChildFill="True">
                <StackPanel Margin="10 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock>
                        <Run Text="耗时:"/>
                        <Run Text="{Binding ModuleParam.ElapsedTime}"/>
                        <Run Text="ms"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="状态:"/>
                        <Run Text="{Binding ModuleParam.Status,Converter={StaticResource StatusConverter}}"/>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="显示全部" HorizontalAlignment="Right" Margin="100 0" Command="{Binding DispAllRegion}"/>
                    <Button x:Name="btnExecute" Content="执行" HorizontalAlignment="Right" Margin="10 0" Command="{Binding ExecuteCommand}"/>
                    <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Right" Margin="10 0" Click="btnCancel_Click"/>
                    <Button x:Name="btnConfirm" Content="确认" HorizontalAlignment="Right" Margin="10 0" Command="{Binding ConfirmCommand}"
                            Background="#FFFF2000" BorderBrush="#FFFF2000"/>
                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</vb:ModuleViewBase>