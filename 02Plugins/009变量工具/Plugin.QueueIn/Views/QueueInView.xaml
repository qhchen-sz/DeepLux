<vb:ModuleViewBase
    x:Class="Plugin.QueueIn.Views.QueueInView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="clr-namespace:HV.Assets.Converter;assembly=HV"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plugin.QueueIn.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vb="clr-namespace:HV.Core;assembly=HV"
    Width="980"
    Height="680"
    Icon="/Plugin.QueueIn;component/Assets/Images/Tool/QueueIn.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="135" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Width="60"
                VerticalAlignment="Center"
                Text="数据出队:" />
            <ComboBox
                Width="300"
                BorderThickness="0,0,0,1"
                ItemsSource="{Binding DataOuts}"
                SelectedIndex="{Binding SelectedIndex_DataOut}" />
            <TextBlock
                Width="60"
                VerticalAlignment="Center"
                Text="起始索引:" />
            <TextBox
                Width="200"
                Margin="5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand, Mode=OneWay}"
                mah:TextBoxHelper.Value="{Binding QueueIndex.Value}"
                mah:TextBoxHelper.Watermark="int"
                IsReadOnly="{Binding QueueIndex.IsReadOnly}"
                Style="{StaticResource LinkTextBox}"
                Text="{Binding QueueIndex.Text, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <DataGrid
            Name="dg"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            EnableColumnVirtualization="True"
            EnableRowVirtualization="True"
            FontSize="12"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            ItemsSource="{Binding LocalVar}"
            RowHeaderWidth="20"
            SelectedIndex="{Binding SelectedIndex}"
            SelectionUnit="FullRow"
            VirtualizingPanel.IsVirtualizing="True">
            <FrameworkElement.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding DeleteCommand}" Header="删除" />
                    <MenuItem
                        Command="{Binding MoveCommand}"
                        CommandParameter="Up"
                        Header="上移" />
                    <MenuItem
                        Command="{Binding MoveCommand}"
                        CommandParameter="Down"
                        Header="下移" />
                </ContextMenu>
            </FrameworkElement.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Index}"
                    CanUserSort="True"
                    Header="索引"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Expression}"
                    CanUserSort="False"
                    Header="链接"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    CanUserSort="False"
                    Header="注释"
                    IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.RowSpan="2" Grid.Column="1">
            <StackPanel>
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding AddVarCommand}"
                    Content="添加" />
            </StackPanel>
            <StackPanel>
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding DeleteCommand}"
                    Content="删除" />
            </StackPanel>
            <StackPanel>
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding MoveCommand}"
                    CommandParameter="Up"
                    Content="上移" />
            </StackPanel>
            <StackPanel>
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding MoveCommand}"
                    CommandParameter="Down"
                    Content="下移" />
            </StackPanel>
        </StackPanel>
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            BorderBrush="#FFFFFFFF"
            BorderThickness="0,0.5,0,0">
            <DockPanel LastChildFill="True">
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock>
                        <Run Text="耗时:" /> <Run Text="{Binding ModuleParam.ElapsedTime}" /> <Run Text="ms" /></TextBlock>
                    <TextBlock>
                        <Run Text="状态:" /> <Run Text="{Binding ModuleParam.Status, Converter={StaticResource StatusConverter}}" /></TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <CheckBox
                        Margin="30,0"
                        Content="每次执行"
                        IsChecked="{Binding IsAlwaysExe}" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Name="btnExecute"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Command="{Binding ExecuteCommand}"
                        Content="执行" />
                    <Button
                        Name="btnCancel"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Click="btnCancel_Click"
                        Content="取消" />
                    <Button
                        Name="btnConfirm"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Background="#FFFF2000"
                        BorderBrush="#FFFF2000"
                        Command="{Binding ConfirmCommand}"
                        Content="确认" />
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</vb:ModuleViewBase>
