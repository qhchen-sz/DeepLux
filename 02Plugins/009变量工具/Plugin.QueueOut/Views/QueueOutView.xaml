<vb:ModuleViewBase
    x:Class="Plugin.QueueOut.Views.QueueOutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="clr-namespace:HV.Assets.Converter;assembly=HV"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plugin.QueueOut.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vb="clr-namespace:HV.Core;assembly=HV"
    Width="980"
    Height="680"
    Icon="/Plugin.QueueOut;component/Assets/Images/Tool/QueueOut.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="135" />
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <CheckBox
                Margin="10,0"
                Content="阻塞等待"
                IsChecked="{Binding DataOut.IsWait}"
                ToolTip="阻塞等待数据，只有当有数据入队后才继续执行，要么不限制长度，要么限制长度只能为1" />
            <CheckBox
                Margin="10,0"
                Content="删除出队数据"
                IsChecked="{Binding DataOut.IsDeleteData}"
                ToolTip="阻塞等待数据，只有当有数据入队后才继续执行，要么不限制长度，要么限制长度只能为1" />
            <CheckBox
                Margin="10,0"
                Content="长度限制"
                IsChecked="{Binding DataOut.IsLimitLength}"
                ToolTip="当队列里的元素个数=N的时候才出队，队列内只能存N个元素，之前插入的会被舍弃" />
            <TextBlock
                Width="60"
                VerticalAlignment="Center"
                Text="限制长度:" />
            <mah:NumericUpDown
                Width="120"
                BorderThickness="0,0,0,1"
                Value="{Binding DataOut.LimitLength}" />
        </StackPanel>
        <DataGrid
            Name="dg"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            EnableColumnVirtualization="True"
            EnableRowVirtualization="True"
            FontSize="12"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            ItemsSource="{Binding LocalVar}"
            RowHeaderWidth="20"
            SelectedIndex="{Binding SelectedIndex}"
            SelectionUnit="FullRow"
            VirtualizingPanel.IsVirtualizing="True">
            <FrameworkElement.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding DeleteCommand}" Header="删除" />
                    <MenuItem
                        Command="{Binding MoveCommand}"
                        CommandParameter="Up"
                        Header="上移" />
                    <MenuItem
                        Command="{Binding MoveCommand}"
                        CommandParameter="Down"
                        Header="下移" />
                </ContextMenu>
            </FrameworkElement.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Index}"
                    CanUserSort="True"
                    Header="索引"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding DataType}"
                    CanUserSort="True"
                    Header="类型"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding Name}"
                    CanUserSort="False"
                    Header="名称"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Value}"
                    CanUserSort="False"
                    Header="值"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    CanUserSort="False"
                    Header="注释"
                    IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.RowSpan="2" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="int"
                    Content="int" />
                <Button
                    Width="60"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="int[]"
                    Content="int[]" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="double"
                    Content="double" />
                <Button
                    Width="60"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="double[]"
                    Content="double[]" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="string"
                    Content="string" />
                <Button
                    Width="60"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="string[]"
                    Content="string[]" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="bool"
                    Content="bool" />
                <Button
                    Width="60"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="bool[]"
                    Content="bool[]" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="Region"
                    Content="Region" />
                <Button
                    Width="60"
                    Command="{Binding AddVarCommand}"
                    CommandParameter="Image[]"
                    Content="Image[]" />
            </StackPanel>
            <StackPanel>
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding DeleteCommand}"
                    Content="删除" />
            </StackPanel>
            <StackPanel>
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding MoveCommand}"
                    CommandParameter="Up"
                    Content="上移" />
            </StackPanel>
            <StackPanel>
                <Button
                    Width="60"
                    Margin="5,10"
                    Command="{Binding MoveCommand}"
                    CommandParameter="Down"
                    Content="下移" />
            </StackPanel>
        </StackPanel>
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            BorderBrush="#FFFFFFFF"
            BorderThickness="0,0.5,0,0">
            <DockPanel LastChildFill="True">
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock>
                        <Run Text="耗时:" /> <Run Text="{Binding ModuleParam.ElapsedTime}" /> <Run Text="ms" /></TextBlock>
                    <TextBlock>
                        <Run Text="状态:" /> <Run Text="{Binding ModuleParam.Status, Converter={StaticResource StatusConverter}}" /></TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Name="btnExecute"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Command="{Binding ExecuteCommand}"
                        Content="执行" />
                    <Button
                        Name="btnCancel"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Click="btnCancel_Click"
                        Content="取消" />
                    <Button
                        Name="btnConfirm"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Background="#FFFF2000"
                        BorderBrush="#FFFF2000"
                        Command="{Binding ConfirmCommand}"
                        Content="确认" />
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</vb:ModuleViewBase>
