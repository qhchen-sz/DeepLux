<vb:ModuleViewBase x:Class="Plugin.PointSurfaceDistance.Views.PointSurfaceDistanceView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:vb="clr-namespace:HV.Core;assembly=HV"
                   xmlns:vm="clr-namespace:Plugin.PointSurfaceDistance.ViewModels"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:Plugin.PointSurfaceDistance.Views"
                   xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                   xmlns:helper="clr-namespace:HV.Common.Helper;assembly=HV"
                   xmlns:enum="clr-namespace:HV.Common.Enums;assembly=HV"
                   xmlns:cvt="clr-namespace:HV.Assets.Converter;assembly=HV"
                   xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
                   xmlns:hw="clr-namespace:VM.Halcon;assembly=VM.Halcon"
                   Icon="/Plugin.PointSurfaceDistance;component/Assets/Images/Tool/PointSurfaceDistance.png"
                   Height="680" Width="980"
                   Loaded="ModuleViewBase_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <cvt:EnumConverter x:Key="EnumConverter"/>
                    <cvt:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
                    <cvt:StatusConverter x:Key="StatusConverter"/>
                </ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/HV;component/Assets/Collection.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HV;component/Assets/Styles/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HV;component/Assets/Styles/TabControlStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HV;component/Assets/Styles/Converter.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TabControl Style="{StaticResource VerTabControl}">
                <TabControl.Resources>
                    <Style TargetType="TabItem" BasedOn="{StaticResource VerTabItem}"/>
                </TabControl.Resources>
                <TabItem Header="基本参数">
                    <Grid x:Name="gd">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="220"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border>
                            <GroupBox Header="图像链接">
                                <StackPanel Orientation="Horizontal" Margin="5 0">
                                    <TextBlock Text="输入图像" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0 0 0 1" Width="200" Margin="5 0"
                                     Style="{StaticResource LinkTextBox}"
                                     Text="{Binding InputImageLinkText}"
                                     mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                     mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.InputImageLink}"/>
                                </StackPanel>
                            </GroupBox>
                        </Border>
                        <Border Grid.Row="1">
                            <GroupBox Header="点ROI信息">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="起点X1:" VerticalAlignment="Center" Width="60"/>
                                        <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                                 Text="{Binding Rect1X1.Text}" 
                                                 IsReadOnly="{Binding Rect1X1.IsReadOnly}"
                                                 mah:TextBoxHelper.Value="{Binding Rect1X1.Value}"
                                                 mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                                 mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect1X1}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="起点Y1:" VerticalAlignment="Center" Width="60"/>
                                        <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                                 Text="{Binding Rect1Y1.Text}" 
                                                 IsReadOnly="{Binding Rect1Y1.IsReadOnly}"
                                                 mah:TextBoxHelper.Value="{Binding Rect1Y1.Value}"
                                                 mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                                 mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect1Y1}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="终点X2:" VerticalAlignment="Center" Width="60"/>
                                        <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                                 Text="{Binding Rect1X2.Text}" 
                                                 IsReadOnly="{Binding Rect1X2.IsReadOnly}"
                                                 mah:TextBoxHelper.Value="{Binding Rect1X2.Value}"
                                                 mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                                 mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect1X2}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="终点Y2:" VerticalAlignment="Center" Width="60"/>
                                        <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                                 Text="{Binding Rect1Y2.Text}" 
                                                 IsReadOnly="{Binding Rect1Y2.IsReadOnly}"
                                                 mah:TextBoxHelper.Value="{Binding Rect1Y2.Value}"
                                                 mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                                 mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect1Y2}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <CheckBox Content="世界mm坐标"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </Border>
                        <Border Grid.Row="2">
                          <GroupBox Header="面ROI信息">
                            <StackPanel>
                              <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="起点X1:" VerticalAlignment="Center" Width="60"/>
                                <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                         Text="{Binding Rect2X1.Text}"
                                         IsReadOnly="{Binding Rect2X1.IsReadOnly}"
                                         mah:TextBoxHelper.Value="{Binding Rect2X1.Value}"
                                         mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                         mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect2X1}"/>
                              </StackPanel>
                              <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="起点Y1:" VerticalAlignment="Center" Width="60"/>
                                <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                         Text="{Binding Rect2Y1.Text}"
                                         IsReadOnly="{Binding Rect2Y1.IsReadOnly}"
                                         mah:TextBoxHelper.Value="{Binding Rect2Y1.Value}"
                                         mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                         mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect2Y1}"/>
                              </StackPanel>
                              <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="终点X2:" VerticalAlignment="Center" Width="60"/>
                                <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                         Text="{Binding Rect2X2.Text}"
                                         IsReadOnly="{Binding Rect2X2.IsReadOnly}"
                                         mah:TextBoxHelper.Value="{Binding Rect2X2.Value}"
                                         mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                         mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect2X2}"/>
                              </StackPanel>
                              <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="终点Y2:" VerticalAlignment="Center" Width="60"/>
                                <TextBox Style="{StaticResource LinkTextBox}" Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                         Text="{Binding Rect2Y2.Text}"
                                         IsReadOnly="{Binding Rect2Y2.IsReadOnly}"
                                         mah:TextBoxHelper.Value="{Binding Rect2Y2.Value}"
                                         mah:TextBoxHelper.LinkButtonCommand="{Binding LinkCommand,Mode=OneWay}"
                                         mah:TextBoxHelper.LinkButtonCommandParameter="{x:Static vm:eLinkCommand.Rect2Y2}"/>
                              </StackPanel>
                              <StackPanel Orientation="Horizontal" Margin="5">
                                <CheckBox Content="世界mm坐标"/>
                              </StackPanel>
                            </StackPanel>
                          </GroupBox>
                        </Border>
                    </Grid>

                </TabItem>
                <TabItem Header="数据结果">
                    <Grid x:Name="gd2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border DockPanel.Dock="Top" Width="{Binding ElementName=gd2,Path=ActualWidth}">
                            <GroupBox Header="结果高度" Width="{Binding ElementName=gd2,Path=ActualWidth}">
                                <StackPanel Orientation="Vertical" Margin="5 0">
                                   
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="点面高度:" VerticalAlignment="Center" Width="60"/>
                                        <TextBox Width="200" Margin="5 0" BorderThickness="0 0 0 1"
                                                 IsReadOnly="True" Text="{Binding HeightValue}"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>
                        </Border>
                        <Border Width="{Binding ElementName=gd2,Path=ActualWidth}" Grid.Row="1">
                            <GroupBox Header="显示设置" Height="{Binding ElementName=gd,Path=ActualHeight}" Grid.Row="1" VerticalAlignment="Top" Width="{Binding ElementName=dp,Path=ActualWidth}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <CheckBox Content="显示结果点" IsChecked="{Binding ShowResultPoint}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <CheckBox Content="显示结果直线" IsChecked="{Binding ShowResultLine}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <CheckBox Content="显示测量轮廓" IsChecked="{Binding ShowMeasContour}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <CheckBox Content="3Sigma外点用红色表示"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <CheckBox Content="显示顶点和底点"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
            <GridSplitter Grid.Column="1"/>
            <WinFormHost:WindowsFormsHost Margin="5" Grid.Column="2" x:Name="winFormHost">
            </WinFormHost:WindowsFormsHost>

        </Grid>
        <Border Grid.Row="1" BorderBrush="White" BorderThickness="0 0.5 0 0">
            <DockPanel LastChildFill="True">
                <StackPanel Margin="10 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock>
                        <Run Text="耗时:"/>
                        <Run Text="{Binding ModuleParam.ElapsedTime}"/>
                        <Run Text="ms"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="状态:"/>
                        <Run Text="{Binding ModuleParam.Status,Converter={StaticResource StatusConverter}}"/>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnExecute" Content="执行" HorizontalAlignment="Right" Margin="10 0" Command="{Binding ExecuteCommand}"/>
                    <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Right" Margin="10 0" Click="btnCancel_Click"/>
                    <Button x:Name="btnConfirm" Content="确认" HorizontalAlignment="Right" Margin="10 0" Command="{Binding ConfirmCommand}"
                            Background="#FFFF2000" BorderBrush="#FFFF2000"/>
                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</vb:ModuleViewBase>
